            <telerikPrimitives:RadBusyIndicator Background="Transparent" Foreground="#a0a638" BorderBrush="#a0a638"
                                            x:Name="busyIndicator" IsRunning="True"
                                            AnimationStyle="AnimationStyle7"/>
        </Grid>
    </Grid>
 
    <!--ApplicationBar-->

</phone:PhoneApplicationPage>